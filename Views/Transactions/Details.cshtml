@model HunterW_FinancialPortal.Models.Transaction

<div class="main-container">
	<!-- Page header start -->
	<div class="page-title">
		<div class="row gutters">
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
				<h5 class="title">My Profile</h5>
			</div>
		</div>
	</div>
	<!-- Page header end -->
	<!-- Content wrapper start -->
	<div class="content-wrapper">
		<!-- Row start -->
		<div class="row gutters">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center">
				<div class="jumbotron">
					<h2 class="display-4 text-info">@Model.Name</h2>
					<hr class="my-4" />
					<div class="row">
						<div class="col-md-4 offset-md-4">
							<h2>$@Model.TransactionAmount</h2>
							<hr />
							<h4>@Model.Description</h4>
							<hr />
							<h4>Type: @Model.TransactionType.Name</h4>
							<h4>Account: @Model.BankAccount.Name</h4>
							<h4>Budget: @Model.Budget.Name</h4>
							<h4>Made by: @Model.CreatedBy.FirstName</h4>
							<hr />
							<h4>@Model.Created</h4>
							@if (User.IsInRole("House Head"))
							{
								<hr />
								<a href="@Url.Action("Delete")">Delete Transaction</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Row end -->
	</div>
	<!-- Content wrapper end -->
</div>
