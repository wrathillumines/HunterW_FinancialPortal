@using HunterW_FinancialPortal.Models

<li class="dropdown">
	<a href="#" id="userSettings" class="user-settings" data-toggle="dropdown" aria-haspopup="true">
		<span class="user-name">@Html.Action("GetFirstName", "Home")</span>
		<span class="avatar">@Html.Action("GetFirstInitial", "Home")</span>
	</a>
	<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userSettings">
		<div class="header-profile-actions">
			<div class="header-user-profile">
				<div class="header-user">
					<img src="@Html.Action("GetAvatar", "Home")" alt="Profile Picture" />
				</div>
				<h5>@Html.Action("GetDisplayName", "Home")</h5>
			</div>
			<a href="@Url.Action("MyProfile", "Profile")"><i class="icon-user1"></i> My Profile</a>
			<a href="@Url.Action("Credentials", "Manage")"><i class="icon-settings1"></i> Account Settings</a>
			<a href="@Url.Action("Login", "Account")" id="logoutForm"><i class="icon-log-out1"></i> Sign Out</a>
		</div>
	</div>
</li>
