@model HunterW_FinancialPortal.Models.CredentialsViewModel
@using HunterW_FinancialPortal.Helpers

@using (Html.BeginForm("EmailPartial", "Manage", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)
	<div class="form-group">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<h5>@Html.DisplayName("New Email Address")</h5>
				<br />
				@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-6 offset-md-3 text-center">
			<input type="submit" value="Change Email" class="btn btn-primary" />
		</div>
	</div>
}