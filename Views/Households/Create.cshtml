@model HunterW_FinancialPortal.Models.Household

<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-xl-4 col-lg-5 col-md-6 col-sm-12">
			<div class="login-screen">
				<div class="login-box">
					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()
						<a href="#" class="login-logo">
							<span class="text-gray-dark">Create A Household</span>
						</a>
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="form-group">
							@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
							@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
							@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<input type="submit" value="Create..." class="btn btn-primary mb-2" />
						</div>
						<div class="m-0">
							<span class="additional-link">@Html.ActionLink("Return To Lobby", "Lobby", "Home")</span>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
